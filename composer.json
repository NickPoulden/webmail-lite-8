{
	"config": {
		"minimum-stability": "dev",
		"preferred-install": {
			"afterlogic/*": "source"
		}
	},
	"repositories": [
		{"type": "composer", "url":"https://afterlogic.com/composer/"}
	],
	"require": {
		"oomphinc/composer-installers-extender": "^2.0",
		
		"afterlogic/aurora-framework": "dev-laravel",
		"afterlogic/aurora-dev-tools": "dev-master",
	
		"afterlogic/aurora-module-admin-auth": "dev-master",
		"afterlogic/aurora-module-webclient-adminpanel": "dev-master",
		"afterlogic/aurora-module-webclient-logs-viewer": "dev-master",
		"afterlogic/aurora-module-contacts": "dev-laravel",
		"afterlogic/aurora-module-webclient-contacts": "dev-master",
		"afterlogic/aurora-module-personal-contacts": "dev-laravel",
		"afterlogic/aurora-module-core": "dev-laravel",
		"afterlogic/aurora-module-webclient-core": "dev-master",
		"afterlogic/aurora-module-dropbox": "dev-laravel",
		"afterlogic/aurora-module-webclient-dropbox-auth": "dev-master",
		"afterlogic/aurora-module-facebook": "dev-master",
		"afterlogic/aurora-module-webclient-facebook-auth": "dev-master",
		"afterlogic/aurora-module-google": "dev-master",
		"afterlogic/aurora-module-webclient-google-auth": "dev-master",
		"afterlogic/aurora-module-webclient-oauth-integrator": "dev-laravel",
		
		"afterlogic/aurora-module-mail": "dev-laravel",
		"afterlogic/aurora-module-webclient-mail": "dev-laravel",
		"afterlogic/aurora-module-webclient-mail-sensitivity-plugin": "dev-master",
		"afterlogic/aurora-module-webclient-change-password": "dev-master",
		"afterlogic/aurora-module-mail-notes-plugin": "dev-master",
		"afterlogic/aurora-module-webclient-openpgp": "dev-laravel",
		"afterlogic/aurora-module-min": "dev-laravel",
		"afterlogic/aurora-module-webclient-session-timeout": "dev-master",
		"afterlogic/aurora-module-webclient-settings": "dev-master",
		"afterlogic/aurora-module-webclient-standard-login-form": "dev-master",
		"afterlogic/aurora-module-eav-object-viewer": "dev-master",
		"afterlogic/aurora-module-mail-change-password-poppassd-plugin": "dev-master",
		"afterlogic/aurora-module-office-document-viewer": "dev-master",
		"afterlogic/aurora-module-webclient-mail-tnef-plugin": "dev-master",
		"afterlogic/aurora-module-webclient-mail-zip-plugin": "dev-master",
		"afterlogic/aurora-module-mail-save-message-as-pdf-plugin": "dev-master",
		"afterlogic/aurora-module-mail-auth-cpanel": "dev-master",
		"afterlogic/aurora-module-cpanel-integrator": "dev-master",
		"afterlogic/aurora-module-two-factor-auth": "dev-master",
		"afterlogic/aurora-module-import-export-mail-plugin": "dev-master",
		"afterlogic/aurora-module-webclient-recaptcha-plugin": "dev-master",
		"afterlogic/aurora-module-mail-master-password": "dev-master",
		"afterlogic/aurora-module-webclient-mail-login-form": "dev-master",
		
		"afterlogic/aurora-module-override-user-settings": "dev-master"
	},
	"scripts": {
		"post-install-cmd": "@pre-config",
		"post-update-cmd": "@pre-config",
		"pre-config": [
			"[ -d data ] || mkdir data",
			"Aurora\\Installer::preConfigSafe"
		],
		"force-config": [
			"[ -d data ] || mkdir data",
			"Aurora\\Installer::preConfigForce"
		],
		"update-configs": [
			"Aurora\\Installer::updateConfigs"
		]
	},
	"extra": {
		"aurora-installer-pre-config": "pre-config.json",
		"installer-types": ["aurora-module", "aurora-framework", "aurora-dev-tools"],
		"installer-paths": {
			"special/package/": ["my/package"],
			"modules/{$name}/": ["type:aurora-module"],
			"system/": ["type:aurora-framework"],
			"dev/": ["type:aurora-dev-tools"]
		}
	}
}
